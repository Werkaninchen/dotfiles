# basic binds
super + alt + l
	betterlockscreen --lock blur
super + Return
	$TERMINAL
super + m
	$TERMINAL -e neomutt
super + p
	passmenu
super + d
	rofi -show combi
super + e
	$TERMINAL -e ranger
super + w
	$BROWSER
super + i
	$TERMINAL -e gotop
super + b
	bgchange.sh
super + F8
	mailsync
#VOLUME
XF86AudioLowerVolume
	pactl -- set-sink-volume @DEFAULT_SINK@  -1%
XF86AudioRaiseVolume
	pactl -- set-sink-volume @DEFAULT_SINK@  +1%
XF86AudioMute
	pactl -- set-sink-mute @DEFAULT_SINK@  toggle
#BRIGHTNESS
XF86MonBrightnessDown
	xbacklight -dec 5
XF86MonBrightnessUp
 	xbacklight -inc 5

